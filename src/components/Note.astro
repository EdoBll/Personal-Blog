---
interface Props {
  type?: 'tip' | 'caution' | 'in-depth';
  title?: string;
}

// src/components/Note.astro
const { type = 'tip', title } = Astro.props;

// Configurazione automatica di emoji e titoli di default in base al tipo
const config = {
  'tip': { defaultTitle: 'Tip', emoji: 'üí°' },
  'caution': { defaultTitle: 'Caution', emoji: '‚ö†Ô∏è' },
  'in-depth': { defaultTitle: 'In-depth', emoji: 'üîç' }
};

const currentConfig = config[type];
const displayTitle = title || currentConfig.defaultTitle;
const emoji = currentConfig.emoji;
---

<details class={`custom-note ${type}`}>
  <summary>{emoji} {displayTitle}</summary>
  <div class="note-content">
    {/* Il tag <slot />: qui dentro finir√† tutto il contenuto Markdown che andremo a scrivere! */}
    <slot />
  </div>
</details>
